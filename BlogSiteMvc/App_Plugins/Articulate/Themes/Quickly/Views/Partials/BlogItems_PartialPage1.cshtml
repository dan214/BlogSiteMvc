@using Articulate
@using Articulate.Models
@inherits UmbracoViewPage<Articulate.Models.IMasterModel>

@{
    var newsItems = Umbraco.GetRecentPosts(Model, 3);
}

<li>
@foreach (var blog in newsItems)
{

    <li>
        <div class="banner-bottom-grid">
            @if (!blog.PostImageUrl.IsNullOrWhiteSpace())
            {
                var thumbnail = blog.GetCropUrl("postImage", "gridImageThumbnail");
                if (!thumbnail.IsNullOrWhiteSpace())
                {
                    <img src="@thumbnail" alt="@blog.Name" class="img-responsive" />
                }
            }
            <p>
                @blog.Excerpt
            </p>
            <div class="more">
                <a href="@blog.Url" class="hvr-bounce-to-bottom sint">Read More</a>
            </div>
        </div>
    </li>
}
</li>

